<Window x:Class="ForumSystemProject.View.Discussions_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForumSystemProject.View"
        mc:Ignorable="d"
        Title="Discussions_window" Height="300" Width="300">
    <Window.Background>
        <ImageBrush ImageSource="photo/background.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <ListView x:Name="list_view" Margin="20" ItemsSource="{Binding Path=discussions}" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="Subject: " />
                        <TextBlock Text="{Binding Subject}" FontWeight="Bold" />
                        <TextBlock Text="Number Of Comment: " />
                        <TextBlock Text="{Binding ElementName=list_view, Path=Items.Count, Mode=OneWay}" FontWeight="Bold" />
                    </StackPanel>
                </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
</Window>
